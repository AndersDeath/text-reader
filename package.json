{
  "name": "text-reader",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "config": "node ./scripts/set-env.js",
    "start": "npm run config -- --environment=dev && ng serve",
    "build": "npm run config -- --environment=prod && ng build",
    "build:production": "npm run config -- --environment=prod && ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "gh-prepare": "npm run config -- --environment=prod && ng build --configuration production --base-href https://andersdeath.github.io/text-reader/",
    "gh-deploy": "ngh --dir=dist/text-reader/",
    "gh": "npm run gh-prepare && npm run gh-deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.1.0",
    "@angular/cdk": "^14.1.3",
    "@angular/common": "^14.1.0",
    "@angular/compiler": "^14.1.0",
    "@angular/core": "^14.1.0",
    "@angular/fire": "^7.4.1",
    "@angular/forms": "^14.1.0",
    "@angular/material": "^14.1.3",
    "@angular/platform-browser": "^14.1.0",
    "@angular/platform-browser-dynamic": "^14.1.0",
    "@angular/router": "^14.1.0",
    "@ngneat/until-destroy": "^9.2.2",
    "firebase": "^9.9.3",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "uuid": "^8.3.2",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.1.3",
    "@angular/cli": "~14.1.3",
    "@angular/compiler-cli": "^14.1.0",
    "@types/jasmine": "~4.0.0",
    "@types/uuid": "^8.3.4",
    "angular-cli-ghpages": "^1.0.3",
    "dotenv": "^16.0.1",
    "jasmine-core": "~4.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "typescript": "~4.7.2",
    "yargs": "^17.5.1"
  }
}
